<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvHost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="rtmp://39.105.182.221/myapp/camera"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvAlias"
        app:layout_constraintEnd_toStartOf="@id/ivSelector"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tvAlias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="B站直播间"
        app:layout_constraintEnd_toStartOf="@id/ivSelector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/tvHost"
        android:textColor="@color/blue"
        />

    <ImageView
        android:id="@+id/ivSelector"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/server_selector"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>